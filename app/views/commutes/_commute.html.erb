  <span class="user"><%= link_to commute.user.name, commute.user %></span>
  <br>
  <span class="times">Times: <%= commute.starttime.localtime.strftime("%H:%M") %>â€”<%= commute.endtime.localtime.strftime("%H:%M") %></span>
