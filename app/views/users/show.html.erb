<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.commutes.any? %>
      <h3>Commutes (<%= @user.commutes.count %>)</h3>
      <ol class="commutes">
        <%= render @commutes %>
      </ol>
      <%= will_paginate @commutes %>
    <% end %>
  </div>
</div>